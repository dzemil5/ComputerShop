@model ComputerShop.Models.Proizvod
@using System.Globalization

@{
    ViewData["Title"] = "Details";
    var euroCulture = new CultureInfo("fr-FR");
}

<h1>Details</h1>

<div>
    <h4>Proizvod</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd class="col-sm-10">
            @(Model.Cena.ToString("C", euroCulture))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kolicina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kolicina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SlikaPath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SlikaPath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kategorija)
        </dt>
        <dd class="col-sm-10">
            @(Model.Kategorija?.Naziv ?? "N/A")
        </dd>
    </dl>
</div>

<div>
    <form asp-controller="Korpa" asp-action="Dodaj" method="post" class="d-inline-flex align-items-center">
        <input type="hidden" name="proizvodId" value="@Model.Id" />
        <label for="kolicina" class="me-2 mb-0">Količina:</label>
        <input type="number" id="kolicina" name="kolicina" value="1" min="1" class="form-control me-2" style="width: 80px;" />
        <button type="submit" class="btn btn-primary">Dodaj u korpu</button>
    </form>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
